pipeline{
       agent any
       stages {
       
            stage('Compile'){
                  steps{ 
                    echo "Compiled successfully"
                               }        
                  }     
         stage('Unit'){
            
               steps{
                                sh"cat /etc/os-release"
                              }
                          }
          stage('to change the folder'){
          
                 steps{        
                           sh "cd /ans"
                           
                           }
                           
                           }
           stage('to run the playbook'){
          
                 steps{    
                         sh "ansible-playbook  play.yml"    
                           
                           }
                           }
          
                    }    
                    }
